---
import ImageCard from '../components/ImageCard.astro';
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import About from '../pages/About.astro'
import Events from './Events.astro';
import '../styles/global.css';

---
<Layout title="ACS @ UH">
	<main>
		<Navbar/>
		<section id = "home">
			<div class = "title">
				<h1 class="text-8xl font-semibold mb-2">American Chemical Society</h1>
				<h2 class="text-center text-blue-600">at the University of Houston</h2>
			
			</div>
			<ul class="link-card-grid">
				<ImageCard imagePath="/src/assets/image_3.png" altText = "pic 1"/>
				<ImageCard imagePath="/src/assets/image_4.png" altText = "pic 1"/>
				<ImageCard imagePath="/src/assets/image_5.png" altText = "pic 1"/>
	
			</ul>
			<div class="flex justify-center m-2">
				<iframe src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=America%2FChicago&bgcolor=%23ffffff&src=YWNzLmF0LnVoQGdtYWlsLmNvbQ&src=NnVrZmtqNGxjNmJmaWFra2pkbTdmNXUwczhAZ3JvdXAuY2FsZW5kYXIuZ29vZ2xlLmNvbQ&src=YjNlaGpiMm9sZ3Y0NWJmb3FpbXJnb2wxNDRAZ3JvdXAuY2FsZW5kYXIuZ29vZ2xlLmNvbQ&color=%233F51B5&color=%233F51B5&color=%23795548" style="border:solid 1px #777" width="800" height="600" frameborder="0" scrolling="no"></iframe>
			</div>
		
		</section>
		<section id="about">
			<About/>
		</section>
		<section id="events">
			<Events/>
			</section>
		<section id="tutoring">
			<h1>Tutoring</h1>
			<a href="/Tutoring">
                <button class="border-black border-2 m-2 p-2">
                    More info
                </button>
            </a>
		</section>
	</main>
</Layout>

<style>
	html{
		scroll-behavior: smooth;
		scroll-padding-top: 5vmax;
	}

	main {
		margin: auto;
		width: 100%;
		max-width: 100%;
		color: black;
	}
	.title{
	line-height: 1;
	text-align: center;
	background-color: #FBBA00;
	padding: 1rem;
	margin-top: 5rem;
	margin-bottom: 10rem;
	opacity: 80%;	
}
	.link-card-grid {
		display: flex;
		flex-direction: row;
	}

</style>
